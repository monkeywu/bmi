#header
	background #424242
	padding 100px 0
.light
	border-left 5px solid #31BAF9
.good
	border-left 5px solid #86D73E
.heavy
	border-left 5px solid #FF982D
.m-heavy
	border-left 5px solid #FF6C02
.s-heavy
	border-left 5px solid #FF1200
.col-sm-4
	text-align center
	.input
		margin-bottom 10px
		span
			display block
			margin-bottom 5px
			color #FFD366
			width 70%
		input
			border 1px solid #FFD366
			border-radius 10px
			background-color rgba(255,255,255,0.18)
			padding-left 10px
	.result 
		position relative
		.send
			width 120px
			height 120px
			display block
			border 1px solid #FFD366
			border-radius 100%
			background-color #FFD366
			font-size 18px
			transition all 0.4s
			outline mediumaquamarine
			&:hover
				box-shadow  0 0 30px rgba(255,196,50,0.64)
		.icon-loop
			position absolute
			bottom 20px
			left 95px
			width 23px
			border-radius 100%
			border 1px solid
			opacity 0
.content
	text-align center
	padding 75px 0 
	background-color rgba(128, 128, 128, 0.12)
	h1
		margin 0 0 50 0px
		letter-spacing 2px
	ul
		padding 0
		margin 0 
		li
			list-style none
			font-size 26px
			background-color #FFF
			margin 0 auto
			width 75%
			margin-top 30px
			padding 10px 0
			span 
				display inline-block
				margin-right 40px
			p
				display inline-block
				margin 0 10px
				font-size 18px
			.fw
				margin-left 50px
			a
				margin-left 30px
				color black
				&:hover
					text-decoration none
#footer
	background-color #FFD366
	padding 35px 0
	.footer-logo
		width 55px
		height 55px
		background-color black
		margin 0 auto
		img
			width 100%
			height auto
@media screen and (max-width: 1000px)
	.content ul li
		font-size 16px
		span
			margin-right 20px
		.fw
			margin-left 10px
@media screen and (max-width: 770px)
	.col-sm-4
		margin-bottom 50px
		.input span
			width 100%
		.send
			margin 0 auto
		.result
			.icon-loop
				display none
@media screen and (max-width: 770px)
	.content ul li 
		span
			margin 0
		p
			display block